{
  "manifest_version": 2,
  "name": "AngryBlock",
  "description": "Block news at PolitRussia.com",
  "version": "1.0",
  "background": {
    "scripts": ["request_inject.js", "script_menu.js"]
  },
  "icons": {
    "16": "icon16.png",
    "19": "icon19.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "*://stormy-ravine-9552.herokuapp.com/ans",
    "*://stormy-ravine-9552.herokuapp.com/ask",
    "*://politrussia.com/news/*"
  ],
  "content_scripts": [{
    "js": ["request_inject.js", "inject.js"],
    "css": ["hide_at_start.css"],
    "matches": ["*://politrussia.com/news/*"],
    "run_at": "document_end"
  }]
}